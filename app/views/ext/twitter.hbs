{{!< ../layouts/default}}

<div class="top-heading" data-page="twitter">
    <div class="wrap"><h1>我的吐槽</h1></div>
</div>

<div class="blog-content">
    <div class="wrap">
        <div class="blog-grids">
            <div class="blog-left">
                <ul class="cbp_tmtimeline">
                    {{#each twitter}}
                    <li>
                        <time class="cbp_tmtime">
                            <span>{{twitter_date}}</span>
                            <span>{{twitter_time}}</span>
                        </time>
                        <div class="cbp_tmlabel">
                            <h2>{{twitter_title}}</h2>
                            <div class="cbp_tmlcontent">{{{twitter_content}}}</div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="blog-right">
                <div class="side-bar">
                    {{> nav_about}}
                    {{> nav_category}}
                    {{> nav_photo}}
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

<script type="text/javascript">require(['page/ext_twitter']);</script>
